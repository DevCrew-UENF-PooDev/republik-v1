<div class="field-container <%= 'field-with-error' if @is_field_invalid %>">
    <%= f.label name, label %>
    <%= f.public_send("#{type}_field", name, placeholder: placeholder, class: "form-control", value: value, autocomplete: auto_complete) %>
    <div class="form-errors">
        <% if @errors_messages.present? %>
          <% @errors_messages.each do |error| %>
            <p><%= error %></p>
          <% end %>
        <% end %>
    </div>   
</div>
  